<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.royalty.backend.userh.UserHCommandMapper">

    <!-- =========================
         비밀번호 조회 (검증용)
         ========================= -->
    <select id="findPasswordByUserId"
            parameterType="long"
            resultType="string">
        SELECT password
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- =========================
         비밀번호 변경
         ========================= -->
    <update id="updatePassword">
        UPDATE users
        SET password = #{password},
            updated_at = NOW()
        WHERE user_id = #{userId}
    </update>

    <!-- =========================
         회원탈퇴 (Hard Delete)
         ========================= -->
    <delete id="deleteByUserId"
            parameterType="long">
        DELETE FROM users
        WHERE user_id = #{userId}
    </delete>

</mapper>
